{
  "name": "zedinark-manager",
  "displayName": "ZedinArk Manager",
  "description": "AI Coding Assistant - Connect to remote ZedinArk API",
  "version": "1.0.1",
  "publisher": "zedinke",
  "repository": {
    "type": "git",
    "url": "https://github.com/zedinke/ZedinArkManager.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zedinark",
          "title": "ZedinArk AI",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "zedinark": [
        {
          "type": "webview",
          "id": "zedinarkChatView",
          "name": "Chat",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zedinark.sidebarChat",
          "when": "view == zedinarkChatView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "zedinark.sidebarChat",
          "when": "view == zedinarkChatView",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "zedinark.connect",
        "title": "ZedinArk: Connect to Server"
      },
      {
        "command": "zedinark.chat",
        "title": "ZedinArk: Chat with AI"
      },
      {
        "command": "zedinark.chatPanel",
        "title": "ZedinArk: Open Chat Panel"
      },
      {
        "command": "zedinark.sidebarChat",
        "title": "ZedinArk: Open Sidebar Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "zedinark.generate",
        "title": "ZedinArk: Generate Code"
      },
      {
        "command": "zedinark.explain",
        "title": "ZedinArk: Explain Code"
      },
      {
        "command": "zedinark.refactor",
        "title": "ZedinArk: Refactor Code"
      },
      {
        "command": "zedinark.update",
        "title": "ZedinArk: Check for Updates",
        "icon": "$(sync)"
      }
    ],
    "configuration": {
      "title": "ZedinArk Manager",
      "properties": {
        "zedinark.useLocalOllama": {
          "type": "boolean",
          "default": false,
          "description": "Csak lokális Ollama-t használ (kikapcsolja a távoli szervert). Ha be van kapcsolva, a VS Code extension csak a localhost:11434-re hív."
        },
        "zedinark.useHybridMode": {
          "type": "boolean",
          "default": true,
          "description": "Hibrid mód: egyszerre használja a lokális GPU-t ÉS a távoli szervert. Intelligens load balancing: ha a modell lokálisan elérhető, akkor a saját GPU-dat használja (70%), különben a távoli szervert (30%)."
        },
        "zedinark.localOllamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Lokális Ollama API URL (általában http://localhost:11434)"
        },
        "zedinark.apiUrl": {
          "type": "string",
          "default": "http://135.181.165.27:8000",
          "description": "ZedinArk API server URL"
        },
        "zedinark.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for authentication (optional if ENABLE_AUTH=false)"
        },
        "zedinark.model": {
          "type": "string",
          "default": "llama3.1:8b",
          "description": "Default LLM model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package",
    "update": "bash update_version.sh patch",
    "update:minor": "bash update_version.sh minor",
    "update:major": "bash update_version.sh major",
    "update:install": "bash update_and_install.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}

